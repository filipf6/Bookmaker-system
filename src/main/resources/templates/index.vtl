#if($matches)
	<div class="container">
		<div class="row">
			<div class="col-md-1 col-md-offset-6">1</div><div class="col-md-1">X</div><div class="col-md-1">2</div>
		</div>
		#foreach($match in $matches)
			<div class="row">
					<div class="col-md-1">$match.getMatchHour()</div> 
