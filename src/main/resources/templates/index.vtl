					<div class="col-md-1">:</div>
					<div class="col-md-2">$match.getGuest().getName()</div>
					<div class="col-md-1">$match.getHostWillWinCourse()</div> 
					<div class="col-md-1">$match.getDrawCourse()</div> 
					<div class="col-md-1">$match.getGuestWillWinCourse()</div>
			</div>
		#end
	</div>
