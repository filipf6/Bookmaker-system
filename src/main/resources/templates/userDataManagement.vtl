#if($user)
	
	<div class="full">
		<ul>
			<button type="button" class="btn btn-primary">Zmien imie</button>
			<button type="button" class="btn btn-primary">Zmien nazwisko</button>
			<button type="button" class="btn btn-primary">Zmien haslo</button>
			<button type="button" class="btn btn-primary">Usun konto</button>
			<br>
			Twoje dane:
			<li>Login: $user.getLogin()</li>
			<li>E-mail: $user.getEmail()</li>
			<li>Imie: $user.getName()</li>
			<li>Nazwisko: $user.getSurname()</li>
		</ul>
	</div>
	
#else
	<div class="full">
	    <!-- Page Content -->
	    <div class="container">
	
	        <!-- Heading Row -->
	        <div class="row">
	            <div class="col-md-8">
	                <img class="img-responsive img-rounded" src="images/start.jpg" alt="">
	            </div>
	            <!-- /.col-md-8 -->
	            <div class="col-md-4">
	                
	                
	               
						<form action='/login' method="post">
						
						<div class="form-login">
							<h4>Zaloguj sie</h4>
						
						
						<div>
							<label for="login">Login</label>
							<input class="form-control input-sm chat-input" id="login" name="login" type="text">
						</div>
						<div>
							<label for="password">Haslo</label>
							<input class="form-control input-sm chat-input" id="password" name="password" type="password">
							#if($loginError)
								<div class="alert alert-danger">
									$loginError
								</div>
							#end
								
						</div>
						
						<hr>
							
							<button type="submit" class="btn btn-primary btn-md">login <i class="fa fa-sign-in"></i></button>
						</div>
						<br>
						<div class="alert alert-warning">
						  Zaloguj sie aby uzyskac dostep do tej podstrony
						</div>
						
						</form>
	            </div>
	            <!-- /.col-md-4 -->
	        </div>
	        <!-- /.row -->
	
	  <hr>
	
	        <!-- Call to Action Well -->
	        <div class="row">
	            <div class="col-lg-12">
	                <div class="well text-center">
	                    Rozgrywane mecze w najblizszych dniach
	                </div>
	            </div>
	            <!-- /.col-lg-12 -->
	        </div>
	        <!-- /.row -->
	
	        <!-- Content Row -->
	        <div class="row">
	            <div class="col-md-6">
	                <h2>dzien aktualny</h2>
	                 <div class="row">
	                <div class="col-lg-12">
	                    <div class="panel panel-default">
	                       
	                        <!-- /.panel-heading -->
	                        <div class="panel-body">
	                            <table width="100%" class="table  table-bordered " id="dataTables-example">
	                                <thead>
	                                    <tr class="active">
	                                    	<th>Godzina</th>
	                                        <th>Gospodarze</th>
	                                        <th>Goscie</th>
	                                        <th>1</th>
	                                        <th>x</th>
	                                        <th>2</th>
	                                    </tr>
	                                </thead>
	                                <tbody>
	                                	#foreach( $match in $todayMatches )
		                                    <tr >
		                                    	<td>$match.getMatchDate().toLocalDateTime().toLocalTime()</td>
		                                        <td>$match.getHost().getName()</td>
		                                        <td>$match.getGuest().getName()</td>
		                                        #foreach( $bet in $match.getTheWinnerOfAMatchBets() )
		                                       		
			                                     		<td>
															$bet.getCourse()
															  		
															
												        </td>
	
		                                        #end
		                                        
		                                    </tr>
										#end
	                                    
	                                </tbody>
	                            </table>
	                            <!-- /.table-responsive -->
	                           
	                           
	                        </div>
	                        <!-- /.panel-body -->
	                    </div>
	                    <!-- /.panel -->
	                </div>
	                <!-- /.col-lg-12 -->
	            </div>
	                
	            </div>
	            <!-- /.col-md-4 -->
	          
	            <!-- /.col-md-4 -->
	            <div class="col-md-6">
	                <h2>na nastepny dzien</h2>
	                 <div class="col-lg-12">
	                    <div class="panel panel-default">
	                       
	                        <!-- /.panel-heading -->
	                        <div class="panel-body">
	                            <table width="100%" class="table  table-bordered " id="dataTables-example">
	                                <thead>
	                                    <tr class="active">
	                                    	<th>Godzina</th>
	                                        <th>Gospodarze</th>
	                                        <th>Goï¿½cie</th>
	                                        <th>1</th>
	                                        <th>x</th>
	                                        <th>2</th>
	                                    </tr>
	                                </thead>
	                                <tbody>
	                                   #foreach( $match in $tomorrowMatches )
		                                    <tr >
		                                    	<td>$match.getMatchDate().toLocalDateTime().toLocalTime()</td>
		                                        <td>$match.getHost().getName()</td>
		                                        <td>$match.getGuest().getName()</td>
		                                        #foreach( $bet in $match.getTheWinnerOfAMatchBets() )
		                                       		
			                                     		<td>
														
															 $bet.getCourse()
														
														
														</td>
	
		                                        #end
		                                        
		                                    </tr>
										#end
	                                </tbody>
	                            </table>
	                            <!-- /.table-responsive -->
	                           
	                           
	                        </div>
	                        <!-- /.panel-body -->
	                    </div>
	                    <!-- /.panel -->
	                </div>
	                
	            </div>
	            <!-- /.col-md-4 -->
	        </div>
	        <!-- /.row -->
	
	        <!-- Footer -->
	        <footer>
	            <div class="row">
	                <div class="col-lg-12">
	                    <p>Copyright &copy; FASTforward</p>
	                </div>
	            </div>
	        </footer>
	
	    </div>
	    <!-- /.container -->
	</div>

#end